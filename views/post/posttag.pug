extends ../layouts/header.pug
block content
     if(post && user)
        each post_val,indexp in post
          each user_val,indexu in user
            if(indexp == indexu)
              .card.gedf-card
                .card-header
                  .d-flex.justify-content-between.align-items-center
                    .d-flex.justify-content-between.align-items-center
                      .mr-2
                        img.rounded-circle(width='45', src='https://picsum.photos/50/50', alt='')
                      .ml-2
                        .h5.m-0= user_val.fullname
                        .h7.text-muted= user_val.email
                    div
                      .dropdown
                        button#gedf-drop1.btn.btn-link.dropdown-toggle(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
                          i.fa.fa-ellipsis-h
                        .dropdown-menu.dropdown-menu-right(aria-labelledby='gedf-drop1')
                          .h6.dropdown-header Options
                          a.dropdown-item(href='#') Save
                          a.dropdown-item(href='#') Hide
                          a.dropdown-item(href='#') Report
                .card-body
                  .text-muted.h7.mb-2
                    i.fa.fa-clock-o= post_val.createdAt
                  img(src="/images/11.jpg",width="100%",height="400px")
                  .py-1
                  a.card-link(href='#')
                    h5.card-title= post_val.title
                  p.card-text= post_val.content
                  div
                    span.badge.badge-primary= post_val.tag
                .py-2