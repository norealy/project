html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet",href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css")
        meta(name='viewport', content='width=device-width, initial-scale=1')
        script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js')
        script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js')
        script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js')
    body
        .container
            .container.p-3.my-3.bg-dark.text-white
                h1 My Blog
                p
                    | This container has a dark background color and a white text, and some extra padding and margins.
                nav.navbar.navbar-expand-lg.navbar-dark.bg-dark(style='margin:24px 0;')
                    button.navbar-toggler.navbar-toggler-right(type='button', data-toggle='collapse', data-target='#navb')
                        span.navbar-toggler-icon
                    #nab.collapse.navbar-collapse
                        ul.navbar-nav.mr-auto
                            li.nav-item
                                a.nav-link(href='/') Trang chủ
                            li.nav-item
                                a.nav-link(href='/posts/me') Đăng bài viết
                            li.nav-item
                                a.nav-link(href='/posts/tag')
                                  span(name="tag",value="Lap trinh") Tag
                            li.nav-item
                                a.nav-link(href="/auth/login") Tài khoản
                            li.nav-item
                                a.nav-link(href="/about") Giới thiệu
                    form.form-inline.my-2.my-lg-0
                        if(user)
                            p= user.name
                        input.form-control.mr-sm-2(type='text', placeholder='Search')
                        button.btn.btn-success.my-2.my-sm-0(type='button') Search
            block content
            block footer
              .bg-secondary
                footer.page-footer.font-small.mdb-color.pt-4
                  // Footer Links
                  .container.text-center.text-md-left
                    // Footer links
                    .row.text-center.text-md-left.mt-3.pb-3
                      // Grid column
                      .col-md-3.col-lg-3.col-xl-3.mx-auto.mt-3
                        h6.text-uppercase.mb-4.font-weight-bold Company name
                        p
