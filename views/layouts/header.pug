                          | consectetur
                          | adipisicing elit.
                      // Grid column
                      hr.w-100.clearfix.d-md-none
                      // Grid column
                      .col-md-2.col-lg-2.col-xl-2.mx-auto.mt-3
                        h6.text-uppercase.mb-4.font-weight-bold Products
                        p
                          a(href='#!') MDBootstrap
                        p
                          a(href='#!') MDWordPress
                        p
