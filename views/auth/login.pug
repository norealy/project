extends ../layouts/header.pug
block content
    if errors
        each error in errors
            alert.alert-danger= error
    h1 Login
    form.ml-auto(action='/auth/login', method="POST")
        .form-group
            label(for='email') Email  :
            input#email.form-control(type='email', placeholder='Enter email',name='email',value=values ? values.email : "")
        .form-group
            label(for='password') Password :
            input#pwd.form-control(type='password', placeholder='Enter password',name='password',value=values ? values.password : "")
        .form-group.form-check
            label.form-check-label
            input.form-check-input(type='checkbox',checked=true)
            |  Remember me
        button.btn.btn-primary(type='submit') Login
        button.btn.btn-primary.ml-5(type='submit')
            a.text-white(href='./register') Register


